{
  "name": "digital-restaurant-api",
  "version": "0.1.0",
  "description": "Backend application for the Digital Restaurant mobile app",
  "main": "index.js",
  "repository": {
    "type": "git",
    "URL": "https://github.com/BelfDev/digital-restaurant-api"
  },
  "author": "Pedro Belfort",
  "license": "UNLICENSED",
  "private": false,
  "scripts": {
    "start": "node dist/bin/www.js",
    "build": "rimraf dist && cross-env NODE_ENV=production babel src -d dist -s",
    "dev": "nodemon src/bin/www.js",
    "test": "cross-env NODE_ENV=test jest",
    "cover": "yarn run test -- --coverage",
    "lint": "eslint --fix src && prettier --write \"src/**/*.js\"",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@babel/runtime": "^7.11.1",
    "@koa/cors": "^3.1.0",
    "awilix": "^4.2.6",
    "awilix-koa": "^4.0.0",
    "axios": "^0.19.2",
    "bristol": "^0.4.0",
    "fejl": "^2.5.1",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "koa-compress": "^5.0.1",
    "koa-respond": "^2.1.0",
    "koa-router": "^9.1.0",
    "lodash": "^4.17.19",
    "palin": "^2.3.0",
    "pg": "^8.3.0",
    "pg-hstore": "^2.3.3",
    "sequelize": "^6.3.3",
    "yenv": "^2.1.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.11.0",
    "@babel/plugin-transform-runtime": "^7.11.0",
    "@babel/polyfill": "^7.10.4",
    "babel-eslint": "^10.1.0",
    "babel-plugin-source-map-support": "^2.1.2",
    "babel-preset-env": "^1.7.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "smid": "^0.1.1"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "jest"
    ],
    "extends": [
      "standard",
      "prettier",
      "plugin:jest/recommended"
    ],
    "env": {
      "jest/globals": true
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "nodemonConfig": {
    "execMap": {
      "js": "babel-node"
    }
  },
  "jest": {
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "__tests__",
      "src/lib/env",
      "src/bin"
    ]
  },
  "babel": {
    "sourceMaps": "both",
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread",
      "@babel/plugin-transform-runtime",
      "@babel/transform-runtime"
    ],
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        },
        [
          "@babel/preset-env",
          {
            "useBuiltIns": false
          }
        ]
      ]
    ],
    "env": {
      "production": {
        "plugins": [
          "source-map-support"
        ],
        "ignore": [
          "**/__tests__/**"
        ]
      }
    }
  }
}
